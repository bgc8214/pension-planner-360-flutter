      _buildCalculationCard(context, '(-) ì¸ì ê³µì œ (ê¸°ë³¸)', null, personalDeduction, numberFormat),
      _buildCalculationCard(context, '(=) ê³¼ì„¸í‘œì¤€', null, taxBase, numberFormat),
      _buildCalculationCard(context, '(â†’) ì‚°ì¶œì„¸ì•¡', 'ëˆ„ì§„ì„¸ìœ¨í‘œ ì ìš©', taxAmount - localTax, numberFormat),
      _buildCalculationCard(context, '(+) ì§€ë°©ì†Œë“ì„¸', 'ì‚°ì¶œì„¸ì•¡ Ã— 10%', localTax, numberFormat),
      _buildCalculationCard(context, '(=) ì´ ë‚©ë¶€ì„¸ì•¡', null, totalTax, numberFormat, isHighlight: true, highlightColor: Colors.red),
      _buildCalculationCard(context, 'ì„¸í›„ ì‹¤ìˆ˜ë ¹ì•¡', 'ì—°ê°„ìˆ˜ë ¹ì•¡ - ì´ë‚©ë¶€ì„¸ì•¡', netIncome, numberFormat, isHighlight: true, highlightColor: Colors.blue),
